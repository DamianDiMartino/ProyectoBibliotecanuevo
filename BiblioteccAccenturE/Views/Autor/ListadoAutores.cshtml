@model IEnumerable<BiblioteccAccenturE.Models.Autor>
@{
    ViewBag.Title = "ListadoAutores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado Autores</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <h1 class="text-center">LISTADO DE AUTORES</h1>
    <main class="container">
        <div class="text-right">

            <a href="/Autor/AgregarAutor/" class="glyphicon glyphicon-plus"
               style="font-size:1.5em"></a>

        </div>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>AUTOR</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aut in this.Model)
                {
                    <tr>
                        <td>@aut.NombreYApellido</td>
                        <td class="text-right">
                            @Html.ActionLink(" ", "EditarAutor", new { Id = aut.Id_Autor },
                            new
                            {
                                @class = "glyphicon glyphicon-pencil",
                                style = "font-size:1.5em"
                            })
                            &nbsp &nbsp &nbsp
                            @Html.ActionLink(" ", "EliminarAutor", new { Id = aut.Id_Autor },
                            new
                            {
                                @class = "glyphicon glyphicon-trash",
                                style = "font-size:1.5em"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>