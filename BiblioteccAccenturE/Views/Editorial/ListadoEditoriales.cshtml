@model IEnumerable<BiblioteccAccenturE.Models.Editorial>
@{
    ViewBag.Title = "ListadoEditoriales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado Editoriales</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <h1 class="text-center">LISTADO DE EDITORIALES</h1>
    <main class="container">
        <div class="text-right">

            <a href="/Editorial/AgregarEditorial/" class="glyphicon glyphicon-plus" style="font-size:1.5em"></a>
        </div>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Nombre Editorial</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var edit in this.Model)
                {
                    <tr>
                        <td>@edit.NombreEditorial</td>
                        <td class="text-right">
                            @Html.ActionLink(" ", "EditarEditorial", new { Id = edit.Id_Editorial },
                            new
                            {
                                @class = "glyphicon glyphicon-pencil",
                                style = "font-size:1.5em"
                            })
                            &nbsp &nbsp &nbsp
                            @Html.ActionLink(" ", "EliminarEditorial", new { Id = edit.Id_Editorial },
                            new
                            {
                                @class = "glyphicon glyphicon-trash",
                                style = "font-size:1.5em"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>