@model IEnumerable<BiblioteccAccenturE.Models.Editorial>
@{
    ViewBag.Title = "ListadoEditoriales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var eliminar = document.querySelector(".eliminar");
    eliminar.addEventListener("click", e => {
        e.preventDefault();
        alert("paro");
    })

</script>
<h1 class="text-center">LISTADO DE EDITORIALES</h1>
<div>
    
    <div id="separador">

    </div>
    <div>

        <table class="table">
            <thead>
                <tr id="encabezado">
                    <th style="font-size:xx-large">EDITORIAL</th>
                    <th><div class="text-right">
    @Html.ActionLink(" ", "AgregarEditorial", null, new
                            {
                                @class = "glyphicon glyphicon-plus",
                                style = "font-size:1.5em"
                            })
</div></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var edit in this.Model)
                {
                    <tr>
                        <td>@Html.ActionLink(edit.NombreEditorial, "LibrosPorEditorial", "Libro", new { Id = edit.Id_Editorial }, new { id = "eliminar" })</td>
                        <td class="text-right">
                            @Html.ActionLink(" ", "EditarEditorial", new { Id = edit.Id_Editorial },
                            new
                            {
                                @class = "glyphicon glyphicon-pencil",
                                style = "font-size:1.5em"
                            })
                            &nbsp &nbsp &nbsp
                            @Html.ActionLink(" ", "EliminarEditorial", new { Id = edit.Id_Editorial },
                            new
                            {
                                @class = "glyphicon glyphicon-trash",
                                style = "font-size:1.5em"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="separador">

    </div>
</div>